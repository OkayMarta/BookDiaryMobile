<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/readFragment">

    <fragment
        android:id="@+id/readFragment"
        android:name="com.example.bookdiarymobile.ui.ReadFragment"
        android:label="Read"
        tools:layout="@layout/fragment_read" >
        <action
            android:id="@+id/action_readFragment_to_addEditBookFragment"
            app:destination="@id/addEditBookFragment" />
        <action
            android:id="@+id/action_readFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
        <action
            android:id="@+id/action_readFragment_to_sortOptionsFragment"
            app:destination="@id/sortOptionsFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.bookdiarymobile.ui.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
        <action
            android:id="@+id/action_favoritesFragment_to_sortOptionsFragment"
            app:destination="@id/sortOptionsFragment" />
    </fragment>

    <fragment
        android:id="@+id/toReadFragment"
        android:name="com.example.bookdiarymobile.ui.ToReadFragment"
        android:label="To Read"
        tools:layout="@layout/fragment_to_read" >
        <action
            android:id="@+id/action_toReadFragment_to_addEditBookFragment"
            app:destination="@id/addEditBookFragment" />
        <action
            android:id="@+id/action_toReadFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
        <action
            android:id="@+id/action_toReadFragment_to_sortOptionsFragment"
            app:destination="@id/sortOptionsFragment" />
    </fragment>

    <fragment
        android:id="@+id/backupFragment"
        android:name="com.example.bookdiarymobile.ui.BackupFragment"
        android:label="Backup"
        tools:layout="@layout/fragment_backup" />

    <fragment
        android:id="@+id/statsFragment"
        android:name="com.example.bookdiarymobile.ui.StatsFragment"
        android:label="Stats"
        tools:layout="@layout/fragment_stats" />

    <!-- === ОНОВЛЕНИЙ БЛОК ДЛЯ AddEditBookFragment === -->
    <fragment
        android:id="@+id/addEditBookFragment"
        android:name="com.example.bookdiarymobile.ui.AddEditBookFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_add_edit_book" >

        <!-- Аргумент для передачі статусу нової книги (може бути null) -->
        <argument
            android:name="book_status"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <!-- Аргумент для передачі ID книги. -1 означає "нова книга" -->
        <argument
            android:name="book_id"
            app:argType="integer"
            android:defaultValue="-1" />

        <!-- Аргумент для заголовка екрану ("Add Book" або "Edit Book") -->
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="Add Book" />

        <!-- Аргумент для навігації, щоб "повідомити" екран редагування про намір -->
        <argument
            android:name="is_transitioning_to_read"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>


    <!-- === ОНОВЛЕНИЙ БЛОК ДЛЯ BookDetailFragment === -->
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.bookdiarymobile.ui.BookDetailFragment"
        android:label="Book Details"
        tools:layout="@layout/fragment_book_detail">
        <argument
            android:name="book_id"
            app:argType="integer" />
        <!-- Додано дію для переходу з детального екрану на екран редагування -->
        <action
            android:id="@+id/action_bookDetailFragment_to_addEditBookFragment"
            app:destination="@id/addEditBookFragment" />
    </fragment>

    <fragment
        android:id="@+id/sortOptionsFragment"
        android:name="com.example.bookdiarymobile.ui.SortOptionsFragment"
        android:label="Sort Options"
        tools:layout="@layout/fragment_sort_options" >
        <argument
            android:name="current_sort_order"
            app:argType="com.example.bookdiarymobile.data.SortOrder" />
        <argument
            android:name="source_screen"
            app:argType="string" />
    </fragment>

</navigation>