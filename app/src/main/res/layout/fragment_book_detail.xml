<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BookDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/detail_image_cover"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic"
            android:contentDescription="@string/book_cover_description" />
        <TextView
            android:id="@+id/detail_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/detail_image_cover"
            app:layout_constraintTop_toTopOf="@id/detail_image_cover"
            app:layout_constraintEnd_toStartOf="@id/button_favorite"
            android:layout_marginEnd="8dp"
            tools:text="The Lord of the Rings" />
        <TextView
            android:id="@+id/detail_text_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintEnd_toEndOf="@id/detail_text_title"
            app:layout_constraintStart_toStartOf="@id/detail_text_title"
            app:layout_constraintTop_toBottomOf="@id/detail_text_title"
            tools:text="J.R.R. Tolkien" />
        <ImageButton
            android:id="@+id/button_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/toggle_favorite_status"
            android:src="@drawable/ic_favorite_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/detail_text_title"
            app:layout_constraintBottom_toBottomOf="@id/detail_text_author"
            tools:src="@drawable/ic_favorite_filled"/>

        <TextView
            android:id="@+id/label_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_genre"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/detail_text_author"
            app:layout_constraintTop_toBottomOf="@id/detail_text_author" />

        <TextView
            android:id="@+id/detail_text_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="Фентезі"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/label_genre"
            app:layout_constraintBaseline_toBaselineOf="@id/label_genre" />

        <RatingBar
            android:id="@+id/detail_rating_bar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1"
            app:layout_constraintStart_toStartOf="@id/label_genre"
            app:layout_constraintTop_toBottomOf="@id/label_genre"
            tools:rating="5" />
        <TextView
            android:id="@+id/detail_text_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_image_cover"
            tools:text="An epic high-fantasy novel, the story began as a sequel to Tolkien's 1937 fantasy novel The Hobbit, but eventually developed into a much larger work." />

        <Button
            android:id="@+id/button_move_to_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_move_to_read"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/detail_text_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/button_move_to_read"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/button_edit"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/action_edit" />

            <Button
                android:id="@+id/button_delete"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="@android:color/holo_red_dark"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_delete" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>