<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.BookDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Заголовок книги -->
        <TextView
            android:id="@+id/detail_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Пригоди Гекльберрі Фінна" />

        <!-- Обкладинка книги -->
        <ImageView
            android:id="@+id/detail_image_cover"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/book_cover_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_text_title"
            tools:src="@tools:sample/backgrounds/scenic" />

        <!-- Автор -->
        <TextView
            android:id="@+id/detail_text_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/detail_image_cover"
            app:layout_constraintTop_toTopOf="@id/detail_image_cover"
            tools:text="Марк Твен" />

        <!-- Жанр -->
        <TextView
            android:id="@+id/label_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/label_genre"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/detail_text_author"
            app:layout_constraintTop_toBottomOf="@id/detail_text_author"
            tools:text="Genre:" />
        <TextView
            android:id="@+id/detail_text_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@id/label_genre"
            app:layout_constraintStart_toEndOf="@id/label_genre"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Children's literature" />

        <!-- Оцінка -->
        <TextView
            android:id="@+id/label_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/label_rating"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/label_genre"
            app:layout_constraintTop_toBottomOf="@id/detail_text_genre" />
        <ImageView
            android:id="@+id/icon_rating_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            app:tint="@color/text_primary"
            tools:src="@drawable/ic_star_filled"
            app:layout_constraintTop_toTopOf="@id/label_rating"
            app:layout_constraintBottom_toBottomOf="@id/label_rating"
            app:layout_constraintStart_toEndOf="@id/label_rating" />
        <TextView
            android:id="@+id/detail_text_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="26sp"
            app:layout_constraintBaseline_toBaselineOf="@id/label_rating"
            app:layout_constraintStart_toEndOf="@id/icon_rating_star"
            tools:text="5" />

        <!-- Дата -->
        <TextView
            android:id="@+id/detail_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/detail_text_author"
            app:layout_constraintBottom_toBottomOf="@id/detail_image_cover"
            tools:text="17.07.2025" />

        <!-- Опис / Нотатки -->
        <TextView
            android:id="@+id/detail_text_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_image_cover"
            tools:text='"Adventures Of Huckleberry Finn" by Mark Twain' />

        <!-- Розділювач -->
        <View
            android:id="@+id/divider_buttons"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/divider_color"
            app:layout_constraintTop_toBottomOf="@id/detail_text_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Кнопки дій -->

        <!-- Кнопка Видалити (завжди праворуч) -->
        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/circle_button_background"
            android:contentDescription="@string/action_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_buttons" />

        <!-- Кнопка Редагувати (зліва від "Видалити") -->
        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_edit"
            android:background="@drawable/circle_button_background"
            android:contentDescription="@string/action_edit"
            app:layout_constraintEnd_toStartOf="@id/button_delete"
            app:layout_constraintTop_toTopOf="@id/button_delete" />

        <!-- Кнопка Вибране (зліва, видима тільки для READ) -->
        <ImageButton
            android:id="@+id/button_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/selector_favorite_button_background"
            android:contentDescription="@string/toggle_favorite_status"
            android:src="@drawable/ic_favorite_crown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_delete" />

        <!-- Кнопка "Позначити як прочитану" (зліва, займає вільний простір, видима тільки для TO_READ) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_move_to_read"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:text="@string/mark_as_read"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            app:strokeColor="@color/text_primary"
            app:strokeWidth="1.5dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/button_edit"
            app:layout_constraintEnd_toStartOf="@id/button_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_edit"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>